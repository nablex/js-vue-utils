{
	"name": "js-vue-utils",
	"version": "1.0-SNAPSHOT",
	"variables": {
		"github": "https://raw.githubusercontent.com/nablex/js-vue-utils",
		"version": "master"
	},
	"scopes": {
		"core": {
			"vue.js": {
				"description": "Slightly modified version of vuejs",
				"folder": "core",
				"url": "${github}/${version}/vue.js"
			}
		},
		"misc": {
			"render.js": {
				"description": "A reusable rendering function",
				"folder": "misc",
				"url": "${github}/${version}/misc/render.js",
			},
			"vue-router.js": {
				"description": "Contains a generic router",
				"folder": "misc",
				"url": "${github}/${version}/misc/vue-router.js",
				"requires": {
					"js-utils": {
						"type": "bundle",
						"url": "https://raw.githubusercontent.com/nablex/js-utils/master/bundle.json",
						"scopes": ["misc"],
						"includes": ["router.js"]
					},
					"vue.js": {
						"self": "core"
					},
					"render.js": {
						"self": "misc"
					}
				}
			},
			"vue2-features.js": {
				"description": "Some generic features brought over from vue1",
				"folder": "misc",
				"url": "${github}/${version}/misc/vue2-features.js",
			}
		},
		"directives": {
			"auto-close.js": {
				"description": "Makes a component (like a popup menu) auto closeable when you click elsewhere. You can also mark certain elements within it to also close it (like a button) using a generic auto-close='true' attribute",
				"folder": "directives",
				"url": "${github}/${version}/directives/auto-close.js",
			},
			"sticky-header.js": {
				"description": "Add it to a menu that has to stick to the top of the page and disappear on scroll down but reappear on scroll up",
				"folder": "directives/sticky-header",
				"url": "${github}/${version}/directives/sticky-header.js",
			},
			"sticky-header.css": {
				"description": "Styling for the sticky header",
				"folder": "directives/sticky-header",
				"url": "${github}/${version}/directives/sticky-header.css",
			}
		},
		"nabu": {
			"cms-masterdata.js": {
				"folder": "cms",
				"url": "${github}/${version}/cms/cms-masterdata.js",
			}
		}
	}
}
