.n-form-table {
	margin: 1rem auto;
	
	.n-form-table-header {
		display: flex;
		
		.n-form-label {
			flex-grow: 1;
			flex-basis: 0;
			&[optional=true] {
				flex-grow: 0;
			}
		}
	}
	.n-form-component {
		display: inline-block;
		flex-grow: 1;
		flex-basis: 0;
		&[optional=true] {
			flex-grow: 0;
		}
	}
	
	.n-form-section {
		&:nth-child {
			background-color: ${background/color/accent};
		}
		display: flex;
	}
}

@media ${devices/desktop} {
	.n-form-table {
		.n-form-table-content {
			.n-form-label {
				display: none;
			}
		}
	}
}

@media ${devices/phone} {
	.n-form-table {
		.n-form-section {
			flex-direction: column;
		}
		.n-form-table-header {
			display: none;
		}
		.n-form-component {
			display: flex;
			
			> * {
				flex-grow: 1;
				flex-basis: 0;
				
				
			}
			&[optional=true] {
				flex-grow: 0;
			}
		}
	}
}
